    <title>Baimi | Site</title>
    @Styles.Render("~/Content/css/normalize.css")
    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/iziToast.min.css")
    @Styles.Render("~/Content/css/main.css")
</head>
<body>

    <header>
        <!-- NAVBAR -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("/")"><img src="@Url.Content("~/Content/images/logo-baimi.png")" class="img-fluid d-block" id="logo-baimi" alt="Responsive image"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
