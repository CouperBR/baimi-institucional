                </ul>
            </div>
        </nav>
        <!-- NAVBAR -->
    </header>
    <!-- HEADER -->
    @RenderBody()
    <!-- Footer -->
    <footer class="page-footer font-small" id="footer">
        <div class="footer-copyright">
            <img src="@Url.Content("~/Content/images/logo-baimi.png")" class="img-fluid" alt="Responsive image">
        </div>
    </footer>
    <!-- Footer -->
    @Scripts.Render("~/Content/js/jquery.min.js")
    @Scripts.Render("~/Content/js/bootstrap.min.js")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    @Scripts.Render("~/Content/js/iziToast.min.js")
    @Scripts.Render("~/Content/js/main.js")
</body>

</html>
