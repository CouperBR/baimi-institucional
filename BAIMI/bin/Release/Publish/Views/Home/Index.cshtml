<section id="products-section">
    <div class="container" id="produtos">
        <div class="row" id="filter">
            <div class="col-md-4 col-sm-6">
                <span>FILTRO</span>
            </div>
            <div class="col-md-4 col-sm-6">
                <span>ORDENAR POR</span>
            </div>
        </div>
        <!-- PRODUTOS -->
        <div class="row">
            @if (ViewBag.Produtos != null)
            {
                foreach (var produto in ViewBag.Produtos)
                {
                    try
                    {
                        var parcelas = produto.numero_max_parcelas != null ? produto.numero_max_parcelas : 12;
                        var valorDividido = produto.valor / parcelas;
                        var porcentagem = ((decimal)20 / 100) * produto.valor;
                        var descontoAVista = ((decimal)produto.desconto_avista / 100) * produto.valor;
                        <div class="col-md-4 col-sm-12 product">
                            <img src="@Url.Content("~/uploads/"+ produto.url_foto)" alt="..." class="float-left product-img">
                            <h5 class="product-title">@produto.nome </h5>
                            @if (produto.entrega_gratis == null || produto.entrega_gratis)
                            {<span class="free-shipping">ENTREGA GRÁTIS!</span>}

                            <h5 class="portion">@(parcelas)X de</h5>
                            <h4 class="amount">@(valorDividido.ToString("C")) </h4>
                            <span class="in-cash">À Vista (@(produto.desconto_avista)%OFF): R$ @(produto.valor - descontoAVista)</span>
                            <div class="col text-center">
                                <a href="/Produto/VerProduto/@produto.id"><button type="button" class="btn btn-primary rounded-pill buy-now">COMPRE AGORA</button></a>
                            </div>
                        </div>
                    }
                    catch (Exception)
                    {

                    }
                }
            }
        </div>
        <!-- PRODUTOS -->
        <div class="container" id="selos">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-center">
                        <img src="@Url.Content("~/Content/images/selo1.png")" class="" alt="Responsive image">
                        <img src="@Url.Content("~/Content/images/selo2.png")" class="" alt="Responsive image">
                        <img src="@Url.Content("~/Content/images/selo3.png")" class="" alt="Responsive image">
