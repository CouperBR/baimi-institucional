<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Baimi | Site</title>
    @Styles.Render("~/Content/css/normalize.css")
    @Styles.Render("~/Content/css/bootstrap.min.css")
    @Styles.Render("~/Content/css/iziToast.min.css")
    @Styles.Render("~/Content/css/main.css")
    @Styles.Render("~/Content/css/fontawesome.min.css")
    @Styles.Render("https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css")
</head>
<body>

    <header>
        <!-- NAVBAR -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")"><img src="@Url.Content("~/Content/images/logo-baimi.png")" class="img-fluid d-block" id="logo-baimi" alt="Responsive image"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                @if (ViewBag.HideNavBar == null)
                {
                    <ul class="list-inline mx-auto text-center menu">
                        <a href="#products-section"><li class="nav-item list-inline-item menu-item menu-item-red-line">PRODUTOS</li></a>
                        <a href="#about-section"><li class="nav-item list-inline-item menu-item ">QUEM SOMOS</li></a>
                        <a href="#talk-section"><li class="nav-item list-inline-item menu-item ">FALE CONOSCO</li></a>
                    </ul>
                }
            </div>
        </nav>
        <!-- NAVBAR -->
    </header>
    <!-- HEADER -->
    @RenderBody()

    <a href="https://api.whatsapp.com/send?phone=51955081075&text=Hola%21%20Quisiera%20m%C3%A1s%20informaci%C3%B3n%20sobre%20Varela%202." class="float" target="_blank">
        <i class="fa fa-whatsapp my-float"></i>
    </a>
    <!-- Footer -->
    <footer class="page-footer font-small" id="footer">
        <div class="footer-copyright">
            <img src="@Url.Content("~/Content/images/logo-baimi.png")" class="img-fluid" alt="Responsive image">
        </div>
    </footer>
    <!-- Footer -->
    @Scripts.Render("~/Content/js/jquery.min.js")
    @Scripts.Render("~/Content/js/bootstrap.min.js")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.15/jquery.mask.min.js"></script>
    @Scripts.Render("~/Content/js/iziToast.min.js")
    @Scripts.Render("~/Content/js/main.js")
</body>

</html>
