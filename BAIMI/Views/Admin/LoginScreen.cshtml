
@{
    ViewBag.Title = "LoginScreen";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Entrar</h5>
                    <form class="form-signin" method="post" action="/Admin/LogIn">
                        <div class="form-label-group">
                            <label for="inputEmail">Email/Usuario</label>
                            <input type="text" id="inputEmail" name="nome" class="form-control" placeholder="Email/Usuario" required autofocus>
                        </div>

                        <div class="form-label-group">
                            <label for="inputPassword">Senha</label>
                            <input type="password" id="inputPassword" name="senha" class="form-control" placeholder="Senha" required>
                        </div>

                        <div class="custom-control custom-checkbox mb-3">
                            <input type="checkbox" class="custom-control-input" id="customCheck1">
                            @*<label class="custom-control-label" for="customCheck1">Remember password</label>*@
                        </div>
                        <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">LogIn</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
